 * 
 */
package com.scotmatson.banking;

import java.util.Scanner;

public class ATMSimulator
{

	static Scanner in = new Scanner(System.in);
	static int select;
					 
	static String instructions = "SIM ATM is an interactive program which simulates\n"
	                           + "the basic functions of an ATM machine.\n\n"
	                           + "To continue, press the enter key.";

	static String appMenu = "Please select a debit card from the folowing list:\n"
			              + "1) Bank A\n"
			              + "2) Bank B\n"
			              + "3) Expired\n"
			              + "4) Exit\n";
	
	/**
	 * 
	 */
	public static void printApplicationHeader()
	{
		System.out.println(title);
		System.out.println(instructions);
		pressAnyKeyToContinue();
	}
	
	/**
	 * 
	 */
	public static void printApplicationMenu()
	{
		System.out.println("#############################################");
	    System.out.println("#                                           #");
		System.out.println("#          Welcome to Scot Matson's         #");			
		System.out.println("#          	 ** SIM ATM **              #");
		System.out.println("#                                           #");
		System.out.println("#############################################\n");
	}
	
	/**
	 * 
	 */
	public static void pressAnyKeyToContinue()
	{
		try
		{
			System.in.read();
		}		
		catch(Exception e){}
	}
			
	/**
	 * 
	 */
	static public void run()
	{
		printApplicationHeader();

		printApplicationMenu();
		select = in.nextInt();
			
		
		quitApplication();
	}
	
	/**
	 * 
	 */
	static public void quitApplication()
	{
		System.exit(0);
	}
	
	/**
	 * 
	 * @param args
	 */
	public static void main(String[] args) 
	{
		run();
	}
}
