/**
 * 
 */
import java.util.GregorianCalendar;
import java.util.Scanner;

public class MyCalendar
{ 
   boolean running = true;
   
   public void printHeader()
   {
      System.out.printf("%s\n", "###################################");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s %27s %5s\n", "#", "Scot Matson presents,", "#");
      System.out.printf("%s %17s %15s\n", "#", "My Calendar", "#");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s %26s %6s\n", "#", "A Java console based", "#");
      System.out.printf("%s %23s %9s\n", "#", "digital scheduler","#");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s\n\n", "###################################");
   }
   
   /*
    * Displays main menu options
    * and prompts user to make a selection.
    * 
    * @return selection result.
    */
   public void printMenu()
   {
      System.out.printf("%s\n", "Please make a selection from the following list of options.");
      System.out.printf("%s, %s, %s, %s, %s, %s, %s\n", 
            "[L]oad",
            "[V]iew by",
            "[C]reate",
            "[G]o to",
            "[E]vent list",
            "[D]elete",
            "[Q]uit");      
   }
   
   public void processMainEvent(Planner p)
   {
      Scanner in = new Scanner(System.in);
      char action = parseInput(in);

      switch (Character.toLowerCase(action))
      {
         case 'l':
            //loadCalendar();
            break;
         case 'v':
            viewCalendar(in, p);
            break;
         case 'c':
            //p.createEvent(date, title, description);
            break;
         case 'g':
            p.goToEvent();
            break;
         case 'e':
            p.listEvents();
            break;
         case 'd':
            p.deleteEvent();
            break;
         case 'q':
            in.close();
            running = false;
            break;
         default:
            break;
      }
   }
   
   public void viewCalendar(Scanner in, Planner p)
   {
      System.out.printf("Please select a view format.\n");
      System.out.printf("[M]onth or [D]ay?\n");
      char action = parseInput(in);
      switch(action)
      {
         case 'm':
            p.setMonthView();
            break;
         case 'd':
            p.setDayView();
            break;
         default:
            System.out.println("Unknown input.");
            break;      
      }
      
      action = '-1';
      while (action != 'm')
      {
         p.printCalendar();
         System.out.printf("[P]revious, [N]ext, or [M]ain?");
         action = parseInput(in);
      }
   }
   
   /**
    * Parses console input and returns the first
    * character.
    * 
    * @return user input.
    */
   public char parseInput(Scanner in)
   {
      char ch;
      // Receive input.
      System.out.printf(">> ");
      ch = in.findInLine(".").charAt(0);
      
      // Flush any additional input.
      in.nextLine();
      
      // Display user selection.
      System.out.printf("%c\n\n", ch);
      
      return ch;
   }
   
   /**
    *    
    */
   public void run()
   {    
      GregorianCalendar gc = new GregorianCalendar();
      Planner p = new Planner(gc, "events.txt");
      
      while (running) {   
         p.printCalendar();
         printMenu();
         processMainEvent(p);
      }
      
      exit();
   }
   
   /*
    * Exits the application.
    */
   public void exit()
   {
      System.out.println("Goodbye.");
      System.exit(0);
   }
   
   /**
    * 
    * @param args
    */
   public static void main(String[] args)
   {
      MyCalendar mc = new MyCalendar();
      mc.printHeader();
      mc.run();
   }
}
