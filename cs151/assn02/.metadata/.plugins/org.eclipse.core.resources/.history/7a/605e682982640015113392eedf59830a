/**
 * 
 */
import java.util.Date;
import java.util.GregorianCalendar;
import java.util.Scanner;
import java.text.ParseException;
import java.text.SimpleDateFormat;

public class MyCalendar
{ 
   boolean running = true;
   
   public void printHeader()
   {
      System.out.printf("%s\n", "###################################");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s %27s %5s\n", "#", "Scot Matson presents,", "#");
      System.out.printf("%s %17s %15s\n", "#", "My Calendar", "#");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s %26s %6s\n", "#", "A Java console based", "#");
      System.out.printf("%s %23s %9s\n", "#", "digital scheduler","#");
      System.out.printf("%s %33s\n", "#", "#");
      System.out.printf("%s\n\n", "###################################");
   }
   
   /*
    * Displays main menu options
    * and prompts user to make a selection.
    * 
    * @return selection result.
    */
   public void printMenu()
   {
      System.out.printf("%s\n", "Please make a selection from the following list of options.");
      System.out.printf("%s, %s, %s, %s, %s, %s, %s\n", 
            "[L]oad",
            "[V]iew by",
            "[C]reate",
            "[G]o to",
            "[E]vent list",
            "[D]elete",
            "[Q]uit");      
   }
   
   public void processMainEvent(Planner p)
   {
      Scanner in = new Scanner(System.in);
      char action = parseInput(in);

      switch (Character.toLowerCase(action))
      {
         case 'l':
            //loadCalendar();
            break;
         case 'v':
            viewCalendar(in, p);
            break;
         case 'c':
            scheduleEvent(in, p);
            break;
         case 'g':
            p.goToEvent();
            break;
         case 'e':
            p.listEvents();
            break;
         case 'd':
            p.deleteEvent();
            break;
         case 'q':
            in.close();
            running = false;
            break;
         default:
            break;
      }
   }
   
   public void viewCalendar(Scanner in, Planner p)
   {
      System.out.printf("Please select a view format.\n");
      System.out.printf("[M]onth or [D]ay?\n");
      char action = parseInput(in);
      switch(action)
      {
         case 'm':
            p.setMonthView();
            break;
         case 'd':
            p.setDayView();
            break;
         default:
            System.out.println("Unknown input.");
            break;      
      }
      
      do
      {
         p.printCalendar();
         System.out.printf("[P]revious, [N]ext, or [M]ain?\n");
         action = parseInput(in);
         if (action == 'p')
         {
            p.previous();
         }
         if (action == 'n')
         {
            p.next();
         }
      } while (action != 'm');
   }
   
   public void scheduleEvent(Scanner in, Planner p)
   {
      SimpleDateFormat sdf = new SimpleDateFormat("MM/dd/yyyy");
      Date date = null;
      Date start = null;
      Date end = null;
      
      System.out.printf("Enter the title of your event: ");
      String title = in.nextLine();
      
      System.out.printf("Enter the date of your event as MM/DD/YYYY");
      String input = in.nextLine();
      try
      {
         date = sdf.parse(input);
      }
      catch (ParseException pe)
      {
         
      }
      
      System.out.printf("Enter the start time of your event using a 24-hour format, HH:MM");
      input = in.nextLine();
      sdf.applyPattern("HH:mm");
      try
      {
         start = sdf.parse(input);
      }
      catch (ParseException pe)
      {
         
      }
      
      System.out.printf("Enter the end time of your event using a 24-hour format, HH:MM");
      input = in.nextLine();
      try
      {
         end = sdf.parse(input);
      }
      catch (ParseException pe)
      {
         
      }
      
      p.addEvent(date, start, end, title);
   }
   
   /**
    * Parses console input and returns the first
    * character.
    * 
    * @return user input.
    */
   public char parseInput(Scanner in)
   {
      char ch = 'x';
      // Receive input.
      System.out.printf(">> ");
      // TODO Carriage return with empty data throws NullPointerException
      ch = in.findInLine(".").charAt(0);
      
      // Flush any additional input.
      in.nextLine();
      
      // Display user selection.
      System.out.printf("%c\n\n", ch);
      
      return ch;
   }
   
   /**
    *    
    */
   public void run()
   {    
      GregorianCalendar gc = new GregorianCalendar();
      Planner p = new Planner(gc, "events.txt");
      
      while (running) {   
         p.printCalendar();
         printMenu();
         processMainEvent(p);
      }
      
      exit();
   }
   
   /*
    * Exits the application.
    */
   public void exit()
   {
      System.out.println("Goodbye.");
      System.exit(0);
   }
   
   /**
    * 
    * @param args
    */
   public static void main(String[] args)
   {
      MyCalendar mc = new MyCalendar();
      mc.printHeader();
      mc.run();
   }
}
