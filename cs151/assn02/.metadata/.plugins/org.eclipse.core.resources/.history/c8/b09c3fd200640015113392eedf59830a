//      {
//         if (first == calendar.get)
//         {
//            
//         }
//         else 
//         {
//            
//         }
//         ++first;
//      }
      
      calendar.add(Calendar.MONTH, 1);
      System.out.println();
      System.out.println();
      
      
      System.out.println("MONTH: " + month);
      //System.out.println(tmp.get(Calendar.MONTH));
      System.out.printf("Month is %s %s\n", calendar.get(Calendar.MONTH), calendar.get(Calendar.YEAR));
