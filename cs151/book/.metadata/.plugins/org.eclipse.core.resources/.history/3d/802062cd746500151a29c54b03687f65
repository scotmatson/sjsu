package chapter04;

import java.awt.*;
import java.awt.geom.*;
import javax.swing.*;

/**
 * An icon that has the shape of planet Mars.
 * 
 * @author scot
 *
 */
public class MarsIcon {

	public static void main(String[] args) implements Icon {
			
		/**
		 * Constructs a Mars icon of a given size.
		 * @param aSize the size of the icon.
		 */
		public MarsIcon(int aSize)
		{
			size = aSize;
		}
		
		public int getIconWidth()
		{
			return size;
		}
		
		public int getIconHeight()
		{
			
		}

	}

}
